<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="view_order_form_inherit_mission">
            <field name="name">sale.order.form.inherit.mission</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='payment_term_id']" position="after">
                    <field name="spaceship_id"/>
                </xpath>
                
                <field name="partner_id" position="before">
                    <field name="assigned_spaceship_id" attrs="{'invisible':[('spaceship_id','=', False)]}"/>
                </field>
            </field>
        </record>
    </data>
</odoo>
